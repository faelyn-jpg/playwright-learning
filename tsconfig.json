{
    "include": ["src/**/*"],
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types"],
      "lib": ["ES2022"],
      "target": "ES2022",
      "module": "commonjs",
      "baseUrl": "./src",
      "allowJs": true,
      "checkJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "outDir": "out",
      "rootDir": "src"
    }
  }
  